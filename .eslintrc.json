{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:mocha/recommended",
    "plugin:chai-friendly/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier", "mocha", "chai-friendly"],
  "rules": {
    "prettier/prettier": "error",
    "func-names": "off"
  }
}
